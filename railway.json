{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "sh -c 'gunicorn app:app --bind 0.0.0.0:${PORT:-8080} --workers 2 --timeout 120'",
    "restartPolicyType": "ON_FAILURE"
  }
}
